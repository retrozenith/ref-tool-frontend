<div class="form-section-content">
  <h3 class="form-section-title">
    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
    </svg>
    Informații meci
  </h3>

  <div class="form-row two-columns">
    <div class="field">
      <label for="match_date">
        Data meciului <span class="required">*</span>
      </label>
      <input name="match_date" id="match_date" type="date" required />
    </div>

    <div class="field">
      <label for="starting_hour">
        Ora de începere <span class="required">*</span>
      </label>
      <input name="starting_hour" id="starting_hour" type="time" required />
    </div>
  </div>

  <div class="form-row two-columns">
    <div class="field autocomplete-wrapper">
      <label for="team_1">
        Echipa gazdă <span class="required">*</span>
      </label>
      <input 
        id="team_1"
        name="team_1" 
        type="text"
        placeholder="Numele echipei gazdă" 
        autocomplete="off"
        required 
      />
      <div id="autocomplete_team_1" class="autocomplete-list"></div>
    </div>

    <div class="field autocomplete-wrapper">
      <label for="team_2">
        Echipa oaspete <span class="required">*</span>
      </label>
      <input 
        id="team_2"
        name="team_2" 
        type="text"
        placeholder="Numele echipei oaspete" 
        autocomplete="off"
        required 
      />
      <div id="autocomplete_team_2" class="autocomplete-list"></div>
    </div>
  </div>
</div>
