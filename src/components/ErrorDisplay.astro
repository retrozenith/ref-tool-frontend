<div id="errorSection" class="form-section-content" style="display: none;">
  <div style="background: color-mix(in srgb, var(--ui-error) 10%, transparent); border: 1px solid color-mix(in srgb, var(--ui-error) 20%, transparent); border-radius: 12px; padding: 1rem;">
    <div style="display: flex; align-items: start; gap: 0.75rem;">
      <svg style="width: 20px; height: 20px; flex-shrink: 0; stroke: var(--ui-error);" fill="none" viewBox="0 0 24 24" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <div>
        <h4 style="margin: 0 0 0.25rem; font-size: 0.875rem; font-weight: 600; color: var(--ui-error);">Eroare</h4>
        <p id="errorMessage" style="margin: 0; font-size: 0.875rem; color: color-mix(in srgb, var(--ui-error) 90%, var(--ui-text));"></p>
      </div>
    </div>
  </div>
</div>
