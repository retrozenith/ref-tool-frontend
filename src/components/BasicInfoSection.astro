<div class="form-section-content">
  <h3 class="form-section-title">
    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
    </svg>
    Informații de bază
  </h3>

  <div class="form-row two-columns">
    <div class="field">
      <label for="locality">
        Asociație / Federație <span class="required">*</span>
      </label>
      <select name="locality" id="locality" required>
        <option value="">Selectează asociația</option>
        <option value="Ilfov">AJF Ilfov</option>
        <option value="frf">FRF - Federația Română de Fotbal</option>
      </select>
    </div>

    <div class="field">
      <label for="ageCategory">
        Categorie de vârstă <span class="required">*</span>
      </label>
      <select name="age_category" id="ageCategory" required disabled>
        <option value="">Mai întâi selectează asociația</option>
      </select>
    </div>
  </div>

  <div class="form-row two-columns">
    <div class="field">
      <label for="referee_name_1">
        Arbitru principal <span class="required">*</span>
      </label>
      <input 
        name="referee_name_1" 
        id="referee_name_1"
        type="text"
        placeholder="Numele arbitrului principal" 
        required 
        autocomplete="name"
      />
    </div>

    <div class="field" id="field_referee_name_2" style="display: none;">
      <label for="referee_name_2">
        Arbitru secundar <span class="required" id="req_referee_name_2">*</span>
      </label>
      <input 
        name="referee_name_2" 
        id="referee_name_2"
        type="text"
        placeholder="Numele arbitrului secundar" 
        autocomplete="name"
      />
    </div>
  </div>
</div>
