---
const today = new Date();
import pkg from '../../package.json';

// Git commit hash (set during build)
const gitHash = import.meta.env.PUBLIC_GIT_HASH || 'dev';
const version = pkg.version;
---

<footer>
  <div class="footer-divider"></div>
  <div class="footer-content">
    <div class="footer-links">
      <a href="/termeni-si-conditii">Termeni și Condiții</a>
    </div>
    <p class="footer-note">
      Acest instrument a fost realizat pentru arbitrii AJF Ilfov.<br />
      Verificați mereu corectitudinea rapoartelor generate.
    </p>
    <div class="contact-info">
      <a href="mailto:admin@cristeavictor.xyz">admin@cristeavictor.xyz</a>
    </div>
    <p class="copyright">
      &copy; 2024-{today.getFullYear()} Cristea Florian-Victor
    </p>
    <div class="version-info">
      v{version} · {gitHash.slice(0, 7)}
    </div>
  </div>
</footer>

<style>
  footer {
    text-align: center;
    padding: var(--spacing-xl) var(--spacing-md);
    margin-top: var(--spacing-2xl);
  }

  .footer-divider {
    width: 100px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--color-steel), transparent);
    margin: 0 auto var(--spacing-xl);
  }

  .footer-content {
    max-width: 500px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .footer-links {
    margin-bottom: var(--spacing-sm);
  }

  .footer-links a {
    color: var(--color-sky);
    font-size: var(--font-size-sm);
    font-weight: 500;
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-links a:hover {
    color: var(--color-light);
    text-decoration: underline;
  }

  .footer-note {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0;
  }

  .copyright {
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .contact-info {
    margin: var(--spacing-xs) 0;
  }

  .contact-info a {
    color: var(--color-sky);
    font-size: var(--font-size-sm);
    font-weight: 500;
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .contact-info a:hover {
    color: var(--color-light);
    text-decoration: underline;
  }

  .version-info {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    font-family: 'Monaco', 'Courier New', monospace;
    opacity: 0.7;
    transition: opacity var(--transition-fast);
  }

  .version-info:hover {
    opacity: 1;
    color: var(--color-text-secondary);
  }

  @media (max-width: 640px) {
    footer {
      padding: var(--spacing-lg) var(--spacing-sm);
    }

    .footer-note {
      font-size: var(--font-size-xs);
    }
  }
</style>
