<div id="u15Section" style="display: none;">
  <div class="section-divider">Informații suplimentare</div>

  <div class="form-section-content">
    <div class="form-row">
      <div class="field">
        <label for="competition">Competiție</label>
        <input 
          name="competition" 
          id="competition"
          type="text"
          placeholder="Numele competiției" 
        />
      </div>
    </div>

    <div class="form-row two-columns">
      <div class="field">
        <label for="locality_field_1_input">Localitatea arbitrului principal</label>
        <input 
          id="locality_field_1_input"
          name="locality_field_1" 
          type="text"
          placeholder="Ilfov (opțional)" 
        />
      </div>
      <div class="field" style="align-items: flex-end; justify-content: flex-end;">
        <button 
          type="button" 
          id="copyLocalityBtn"
          class="btn-secondary btn-small"
          title="Copiază localitatea la toți oficialii"
          style="display: none;"
        >
          <svg width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          Copiază la toți
        </button>
      </div>
    </div>

    <div class="form-row two-columns">
      <div class="field">
        <label for="assistant_referee_1">Arbitru asistent 1</label>
        <input 
          name="assistant_referee_1" 
          id="assistant_referee_1"
          type="text"
          placeholder="Numele arbitrului asistent 1" 
          autocomplete="name"
        />
      </div>
      <div class="field" id="field_locality_field_2" style="display: none;">
        <label for="locality_field_2_input">Localitatea arbitrului asistent 1</label>
        <input 
          id="locality_field_2_input"
          name="locality_field_2" 
          type="text"
          placeholder="Ilfov (opțional)" 
        />
      </div>
    </div>

    <div class="form-row two-columns">
      <div class="field">
        <label for="assistant_referee_2">Arbitru asistent 2</label>
        <input 
          name="assistant_referee_2" 
          id="assistant_referee_2"
          type="text"
          placeholder="Numele arbitrului asistent 2" 
          autocomplete="name"
        />
      </div>
      <div class="field" id="field_locality_field_3" style="display: none;">
        <label for="locality_field_3_input">Localitatea arbitrului asistent 2</label>
        <input 
          id="locality_field_3_input"
          name="locality_field_3" 
          type="text"
          placeholder="Ilfov (opțional)" 
        />
      </div>
    </div>

    <div class="form-row two-columns">
      <div class="field">
        <label for="fourth_official">Al 4-lea oficial</label>
        <input 
          name="fourth_official" 
          id="fourth_official"
          type="text"
          placeholder="Numele celui de-al 4-lea oficial" 
          autocomplete="name"
        />
      </div>
      <div class="field" id="field_locality_field_4" style="display: none;">
        <label for="locality_field_4_input">Localitatea arbitrului al 4-lea oficial</label>
        <input 
          id="locality_field_4_input"
          name="locality_field_4" 
          type="text"
          placeholder="Ilfov (opțional)" 
        />
      </div>
    </div>
  </div>

  <div class="section-divider">Informații stadion</div>

  <div class="form-section-content">
    <div class="form-row two-columns">
      <div class="field">
        <label for="stadium_name">Nume stadion</label>
        <input 
          name="stadium_name"
          id="stadium_name" 
          type="text"
          placeholder="Numele stadionului" 
        />
      </div>
      <div class="field">
        <label for="stadium_locality">Localitatea stadionului</label>
        <input 
          name="stadium_locality"
          id="stadium_locality" 
          type="text"
          placeholder="Localitatea stadionului" 
        />
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const copyBtn = document.getElementById('copyLocalityBtn');
    
    if (copyBtn) {
      copyBtn.addEventListener('click', () => {
        const locality1 = document.getElementById('locality_field_1_input') as HTMLInputElement;
        const locality2 = document.getElementById('locality_field_2_input') as HTMLInputElement;
        const locality3 = document.getElementById('locality_field_3_input') as HTMLInputElement;
        const locality4 = document.getElementById('locality_field_4_input') as HTMLInputElement;
        
        if (locality1 && locality2 && locality3 && locality4) {
          const value = locality1.value;
          locality2.value = value;
          locality3.value = value;
          locality4.value = value;
          
          // Visual feedback
          const originalText = copyBtn.querySelector('span') || copyBtn;
          const originalContent = originalText.textContent;
          if (originalText) {
            originalText.textContent = '✓ Copiat!';
            copyBtn.style.background = 'var(--color-success)';
            copyBtn.style.borderColor = 'var(--color-success)';
            
            setTimeout(() => {
              originalText.textContent = originalContent;
              copyBtn.style.background = '';
              copyBtn.style.borderColor = '';
            }, 1500);
          }
        }
      });
    }
  });
</script>
