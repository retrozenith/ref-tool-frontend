---

<div id="u15Section" class="form-section-content section-divider" style="display: none;">
  <div class="section-header">
    <div class="section-icon" aria-hidden="true">
      <svg fill="none" viewBox="0 0 24 24" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
    </div>
    <h3 class="section-title">Informații suplimentare</h3>
  </div>

  <label id="field_competition">
    <span class="label-text">
      Competiție
    </span>
    <input 
      name="competition" 
      type="text"
      placeholder="Introduceți numele competiției" 
    />
  </label>

  <div style="position: relative;">
    <label id="field_locality_field_1">
      <span class="label-text">
        Asociație arbitru principal
      </span>
      <input 
        id="locality_field_1_input"
        name="locality_field_1" 
        type="text"
        placeholder="Asociație (opțional, implicit: asociația selectată)" 
      />
    </label>
    <button 
      type="button" 
      id="copyLocalityBtn"
      class="copy-locality-btn"
      title="Copiază localitatea arbitrului principal la toți oficialii"
    >
      <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
      </svg>
      <span>Copiază la toți oficialii</span>
    </button>
  </div>

  <div class="form-row two-col">
    <label id="field_assistant_referee_1">
      <span class="label-text">
        Arbitru asistent 1
      </span>
      <input 
        name="assistant_referee_1" 
        type="text"
        placeholder="Numele arbitrului asistent 1" 
        autocomplete="name"
      />
    </label>

    <label id="field_locality_field_2">
      <span class="label-text">
        Localitatea arbitrului asistent 1
      </span>
      <input 
        id="locality_field_2_input"
        name="locality_field_2" 
        type="text"
        placeholder="Asociație (opțional, implicit: asociația selectată)" 
      />
    </label>
  </div>

  <div class="form-row two-col">
    <label id="field_assistant_referee_2">
      <span class="label-text">
        Arbitru asistent 2
      </span>
      <input 
        name="assistant_referee_2" 
        type="text"
        placeholder="Numele arbitrului asistent 2" 
        autocomplete="name"
      />
    </label>

    <label id="field_locality_field_3">
      <span class="label-text">
        Localitatea arbitrului asistent 2
      </span>
      <input 
        id="locality_field_3_input"
        name="locality_field_3" 
        type="text"
        placeholder="Asociație (opțional, implicit: asociația selectată)" 
      />
    </label>
  </div>

  <div class="form-row two-col">
    <label id="field_fourth_official">
      <span class="label-text">
        Al 4-lea oficial
      </span>
      <input 
        name="fourth_official" 
        type="text"
        placeholder="Numele celui de-al 4-lea oficial" 
        autocomplete="name"
      />
    </label>

    <label id="field_locality_field_4">
      <span class="label-text">
        Asociație al 4-lea oficial
      </span>
      <input 
        id="locality_field_4_input"
        name="locality_field_4" 
        type="text"
        placeholder="Asociație (opțional, implicit: asociația selectată)" 
      />
    </label>
  </div>

  <div style="background: var(--ui-card); padding: 1.25rem; border-radius: 12px; border: 1px solid var(--ui-border); margin-top: 0.5rem;">
    <div class="section-header" style="margin-bottom: 1rem;">
      <div class="section-icon" aria-hidden="true">
        <svg fill="none" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
      </div>
      <h4 class="section-title" style="font-size: 1rem;">Informații stadion</h4>
    </div>

    <div class="form-row two-col">
      <label id="field_stadium_name">
        <span class="label-text">
          Nume stadion
        </span>
        <input 
          name="stadium_name" 
          type="text"
          placeholder="Numele stadionului" 
        />
      </label>

      <label id="field_stadium_locality">
        <span class="label-text">
          Localitatea stadionului
        </span>
        <input 
          name="stadium_locality" 
          type="text"
          placeholder="Localitatea stadionului" 
        />
      </label>
    </div>
  </div>
</div>

<style>
  .copy-locality-btn {
    margin-top: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--ui-primary);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
    width: fit-content;
  }

  .copy-locality-btn:hover {
    background: var(--ui-primary-hover);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .copy-locality-btn:active {
    transform: translateY(0);
  }

  .copy-locality-btn svg {
    width: 16px;
    height: 16px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const copyBtn = document.getElementById('copyLocalityBtn');
    
    if (copyBtn) {
      copyBtn.addEventListener('click', () => {
        const locality1 = document.getElementById('locality_field_1_input') as HTMLInputElement;
        const locality2 = document.getElementById('locality_field_2_input') as HTMLInputElement;
        const locality3 = document.getElementById('locality_field_3_input') as HTMLInputElement;
        const locality4 = document.getElementById('locality_field_4_input') as HTMLInputElement;
        
        if (locality1 && locality2 && locality3 && locality4) {
          const value = locality1.value;
          locality2.value = value;
          locality3.value = value;
          locality4.value = value;
          
          // Visual feedback
          const originalText = copyBtn.querySelector('span');
          if (originalText) {
            const originalContent = originalText.textContent;
            originalText.textContent = '✓ Copiat!';
            copyBtn.style.background = 'var(--ui-success, #10b981)';
            
            setTimeout(() => {
              originalText.textContent = originalContent;
              copyBtn.style.background = '';
            }, 1500);
          }
        }
      });
    }
  });
</script>
